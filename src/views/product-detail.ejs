<html lang="en">
<%- include('./partials/head', { title: "Titulo del juego" }) %>

    <body>
        <%- include('nav-bar') %>
            <main class="det-main">
                <div class="det-container">
                    <div class="det-header">
                        <div class="det-back-img">
