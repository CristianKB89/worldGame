                                <div class="det-but-green">
                                    <button class="det-but-game">
                                        OBTENER GAME PASS
                                    </button>
                                </div>
                                <div class="det-but-grey">
                                   <form action="/shoppingCart/<%=game.id%>" method="post">
                                    <% if (localUser) { %>
                                        <button class="det-but-1" type="submit">
                                            COMPRAR
                                        </button>
                                    <% } else { %>
                                        <a href="/users/login">COMPRAR</a>
                                    <% } %>
