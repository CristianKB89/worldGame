<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: "nickName " }) %>
<script src="/js/userProfile.js"></script>

    <body>
        <%- include('nav-bar') %>
            <main class="profileContainer">
                <section class="profileInfo" style="background-image: url(/images/bg-signup.jpeg);">
                    <div class="blur">
                        <img src="/images/userImg.jpg" alt="userNick">
                        <div>
                            <h1>userNick</h1>
                            <h4>username</h4>
                            <p>email@email.com</p>
                            <span id="editButton">Editar perfil</span>
                            <a href="/">Cerrar sesion </a>
                        </div>
                    </div>
                </section>
                <section class="profileLibrary" id="library">
                    <h2>Mi biblioteca</h2>
                    <div class="empty">
                        <h4>No hay nada, aun!</h4>
                        <p>Conoce tu sigiente juego favorito</p>
                        <a href="/products">Ir ahora</a>
                    </div>
                    <div class="libraryList">
                        <a href="#">
                            <div>
                                <img src="/images/haloimgmuestra2.jpg" alt="banner">
                                <h3>Halo infinite</h3>
                                <h4>Comprado: dd/mm/aaaa</h4>
                            </div>
                        </a>
                    </div>
                </section>
                <section class="profileEdit" id="editForm">
                    <h2>Editar Usuario</h2>
                    <p>email@email.com</p>
                    <form action="">
                        <label for="userNick">
