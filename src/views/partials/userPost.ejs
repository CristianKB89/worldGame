<article class="postContainer">
    <div class="postUserInfo">
        <img src="/images/userImg.jpg" alt="">
        <div>
            <h2>Pepito Perez</h2>
            <p>hace 2 horas</p>
        </div>
    </div>
    <a href="#">Fornite</a>
    <p><%=description%></p>
    <% if (img !== "none") { %>
        <img class="comunidad-game" src="/images/usersPostImages/<%= img %>" alt="">
    <% } %>
    <div class="postButtons">
        <!-- <i class="far fa-heart"></i>
        <i class="fa-regular fa-comment"></i> -->
        <i class="fa-regular fa-pen-to-square editButton"></i>
        <form action="/community/delete/<%=id%>?_method=DELETE" method="post">
            <button type="submit" style="border: none;">
                <i class="fa-regular fa-trash-can"></i>
            </button>
        </form>
    </div>
    <section class="postEdit">
        <form action="/community/edit/<%=id%>?_method=PUT" method="post" enctype="multipart/form-data">
            <textarea name="description"><%=description%></textarea>
            <div>
                <label for="<%=id%>_img">
                    <i class="fa-regular fa-image"></i>
                    <input type="file" id="<%=id%>_img" name="imgEdit">
                </label>
                <select name="game">
                    <option value="game">Game</option>
                    <option value="game">Game</option>
                    <option value="game">Game</option>
                </select>
                <button type="submit">Publicar</button>
            </div>
        </form>
    </section>
</article>